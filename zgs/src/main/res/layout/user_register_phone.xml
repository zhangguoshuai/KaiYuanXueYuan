<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@xml/popbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/red"
            android:orientation="horizontal">

            <ImageView
                android:padding="10dp"
                android:id="@+id/user_login_email_close"
                style="@style/TitlebackImageView"
                android:src="@mipmap/close"/>

            <TextView
                style="@style/TitleTextView"
                android:text="注册"/>

            <Space
                style="@style/MySpace" />

            <TextView
                style="@style/TitleTextView"
                android:paddingRight="10dp"
                android:text="登录"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/red"
            >

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="1"
                android:layout_gravity="center"
                android:textColor="@color/red"
                android:gravity="center"
                android:background="@xml/shape"
                />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="5dp"
                android:background="@color/white"
                android:layout_gravity="center"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="2"
                android:textColor="@color/red"
                android:gravity="center"
                android:background="@xml/shape"
                />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="5dp"
                android:background="@color/white"
                android:layout_gravity="center"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:textColor="@color/red"
                android:gravity="center"
                android:background="@xml/shape"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <com.kaiyuanxueyuan.view.LineEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入手机号"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/red"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/user_login_register_email"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="邮箱注册"
            android:gravity="center"
            android:textColor="@color/black"
            />

    </LinearLayout>

</RelativeLayout>