<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@xml/popbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myArticle_back"
            style="@style/TitlebackImageView"/>

        <TextView
            style="@style/TitleTextView"
            android:text="@string/my_article_Title"/>
    </LinearLayout>

    <com.kaiyuanxueyuan.view.ViewPagerIndicator
        android:id="@+id/myArticle_Indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.kaiyuanxueyuan.view.ViewPagerIndicator>

   <com.kaiyuanxueyuan.view.MyViewPager
       android:id="@+id/myArticle_viewPage"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp">

   </com.kaiyuanxueyuan.view.MyViewPager>

</LinearLayout>